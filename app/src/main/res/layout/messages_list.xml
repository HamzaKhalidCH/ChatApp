<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp"
    tools:ignore="MissingClass"
    >

<androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ListMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/sendMsgText"
        />


        <EditText
            android:id="@+id/sendMsgText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:width="135pt"
            android:gravity="bottom"
            android:hint="Enter Message"
            android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"
            android:maxWidth="200pt"
            android:singleLine="false"
            />

        <Button
            android:id="@+id/sendBtn"
            android:text="Send"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sendMsgText"
            android:layout_below="@id/ListMessage"
            android:maxWidth="70pt"
            android:minWidth="40pt"
            />


</RelativeLayout>